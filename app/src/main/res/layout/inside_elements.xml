<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tb_main"
    android:layout_marginTop="10dp">

    <EditText
        android:id="@+id/tv_message"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:hint="Type your message here"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_elements"
        android:layout_below="@+id/tv_message"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

        <EditText
            android:id="@+id/et_v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vikalp 1"/>

        <EditText
            android:id="@+id/et_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vikalp 2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_poll_message"
        android:layout_below="@+id/cv_elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="No. of Days to run Poll :"/>

    <TextView
        android:id="@+id/tv_poll_result"
        android:layout_alignBaseline="@+id/tv_poll_message"
        android:layout_toEndOf="@+id/tv_poll_message"
        android:layout_width="wrap_content"
        android:textColor="#f69653"
        android:text="2 Days"
        android:layout_height="wrap_content" />

</RelativeLayout>